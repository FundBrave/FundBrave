# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Web3 Chat (Waku + Codex)

# Feature flag to enable/disable the Web3 chat section.
# Set to "true" to show the ShieldCheck icon in the navbar and enable chat.
# Set to "false" to hide the Web3 chat entry point entirely.
NEXT_PUBLIC_WEB3_CHAT_ENABLED=true

NEXT_PUBLIC_WAKU_ENABLED=true

# URL of a running Codex decentralized storage node.
# Optional â€” chat works without it, but file attachments and chat history
# snapshots require a reachable Codex node.
# Default: http://localhost:8080/api/codex/v1
NEXT_PUBLIC_CODEX_API_URL=http://localhost:8080/api/codex/v1
